{
  "compilerOptions": {
    "traceResolution": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "es6", "es7", "es5", "dom"],
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noStrictGenericChecks": true
  },
  "exclude": [
    "node_modules"
  ]
}

